<div class="content">
	<div class="create-todo">
		<input placeholder='add something here' type="text">
	</div>
	<div class="todos">
		<ul class="todo-list">
			<li>
				<div class="todo">
					<div class="display">
						<input class='check' type="checkbox">
						<div class="todo-content">laundry</div>
